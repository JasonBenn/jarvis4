{
  "name": "jarvis4-worldview-updater",
  "displayName": "Jarvis4 Worldview Updater",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jarvis4-worldview-updater.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "// DEVELOPMENT": "====================================",
    "dev": "pnpm run watch",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",

    "// BUILD & PACKAGE": "====================================",
    "build": "pnpm run compile",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "vscode:prepublish": "pnpm run package",
    "bundle": "pnpm run package && npx vsce package",

    "// INSTALLATION": "====================================",
    "install:extension": "cursor --install-extension *.vsix",
    "install:local": "pnpm run bundle && pnpm run install:extension",
    "uninstall:extension": "cursor --uninstall-extension jasonbenn.jarvis4-worldview-updater",
    "reinstall": "pnpm run uninstall:extension; pnpm run install:local",

    "// CODE QUALITY": "====================================",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",

    "// TESTING": "====================================",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "test": "vscode-test",

    "// UTILITIES": "====================================",
    "clean": "rm -rf dist out *.vsix",
    "reset": "pnpm run clean && pnpm install",
    "prepare": "pnpm run compile"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "readwise-reader-api": "^0.5.2"
  }
}

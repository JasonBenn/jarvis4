{
  "name": "jarvis4-worldview-updater",
  "displayName": "Jarvis4 Worldview Updater",
  "description": "Integrate Readwise highlights into Cursor Compose workflow",
  "version": "0.1.0",
  "publisher": "jasonbenn",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonbenn/jarvis4-worldview-updater"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "readwise.fetchAndShow",
        "title": "Readwise: Fetch and Show Highlights"
      },
      {
        "command": "readwise.showPanel",
        "title": "Readwise: Show Highlights Panel"
      }
    ],
    "configuration": {
      "title": "Readwise Highlights",
      "properties": {
        "readwise.apiToken": {
          "type": "string",
          "default": "",
          "description": "Your Readwise API token"
        },
        "readwise.snoozeDurationWeeks": {
          "type": "number",
          "default": 4,
          "description": "Number of weeks to snooze a highlight (default: 4)",
          "minimum": 1
        }
      }
    }
  },
  "scripts": {
    "// DEVELOPMENT": "====================================",
    "dev": "pnpm run watch",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "// BUILD & PACKAGE": "====================================",
    "build": "pnpm run compile",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "vscode:prepublish": "pnpm run package",
    "bundle": "pnpm run package && npx @vscode/vsce package --no-dependencies",
    "// INSTALLATION": "====================================",
    "install:extension": "cursor --install-extension *.vsix",
    "install:local": "pnpm run bundle && pnpm run install:extension",
    "uninstall:extension": "cursor --uninstall-extension jasonbenn.jarvis4-worldview-updater",
    "reinstall": "pnpm run uninstall:extension; pnpm run install:local",
    "// CODE QUALITY": "====================================",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "// TESTING": "====================================",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "test": "vscode-test",
    "// UTILITIES": "====================================",
    "clean": "rm -rf dist out *.vsix",
    "reset": "pnpm run clean && pnpm install",
    "prepare": "pnpm run compile",
    "test:persistence": "node test-persistence.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "openai": "^6.3.0",
    "readwise-reader-api": "^0.5.2",
    "sql.js": "^1.13.0"
  }
}
